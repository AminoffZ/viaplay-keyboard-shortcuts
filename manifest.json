{
  "manifest_version": 2,
  "name": "Add keyboard shortcut support to Viaplay web player",
  "version": "1.4",
  "content_scripts": [
    {
      "matches": ["https://*.viaplay.fi/*", 
                  "https://*.viaplay.se/*", 
                  "https://*.viaplay.no/*",
                  "https://*.viaplay.dk/*", 
                  "https://*.viaplay.is/*", 
                  "https://*.viaplay.ee/*", 
                  "https://*.viaplay.lv/*", 
                  "https://*.viaplay.lt/*", 
                  "https://*.viaplay.pl/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}
